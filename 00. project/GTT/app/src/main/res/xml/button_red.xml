<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <gradient android:angle="-90" android:startColor="@color/app_red_dark" android:endColor="@color/app_red"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <gradient android:angle="-90" android:startColor="@color/app_red_dark" android:endColor="@color/app_red"  />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <gradient android:angle="-90" android:startColor="@color/app_red" android:endColor="@color/app_red_dark"  />
        </shape>
    </item>
</selector>