<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <!--<stroke android:width="2dip" android:color="@color/app_blue" />-->
            <gradient android:angle="-90" android:startColor="@color/app_blue_dark" android:endColor="@color/app_blue"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <!--<stroke android:width="2dip" android:color="@color/app_blue" />-->
            <gradient android:angle="-90" android:startColor="@color/app_blue_dark" android:endColor="@color/app_blue"  />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <!--<stroke android:width="2dip" android:color="@color/app_blue" />-->
            <gradient android:angle="-90" android:startColor="@color/app_blue" android:endColor="@color/app_blue_dark"  />
        </shape>
    </item>
</selector>